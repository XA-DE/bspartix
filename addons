
## BLACKARCH
curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syu --noconfirm &&

## dotfiles
git clone https://github.com/XA-DE/dotfiles.git &&

## DEPENDENCIES
pacman -S --noconfirm alsa-utils thunar dmenu xf86-video-intel intel-ucode xorg-server xorg-xinit xorg-xrandr xdg-utils polybar feh ffmpeg imagemagick bspwm vim sxhkd firefox ntfs-3g linux-headers linux-lts-headers bluez bluez-runit bluez-utils dkms broadcom-wl-dkms redshift picom alacritty yay &&
yes | pacman -Scc &&

## USER x
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) ALL" >> /etc/sudoers &&

## CONFIG
cp -r truetype /usr/share/fonts &&
cp -r dotfiles/. /home/x &&

## remove setup dir
cd .. &&
rm -rf bspartix



