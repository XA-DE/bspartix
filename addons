pacman -S --noconfirm xorg-xrandr ffmpeg feh imagemagick bspwm sxhkd firefox vim xorg-xrandr &&

curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syy &&
git clone https://github.com/terroo/wallset down-wallset &&
cd down-wallset &&
sh install.sh &&

cp x /home &&
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) ALL" >> /etc/sudoers


