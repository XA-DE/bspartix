## DEPENDENCIES
pacman -S --noconfirm xorg-server xorg-xinit xorg-xrandr polybar ffmpeg feh imagemagick bspwm firefox vim rxvt-unicode &&
#sxhkd termite picom xdg-utils &&

## BLACKARCH
curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syy &&

## USER x
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) ALL" >> /etc/sudoers &&


## CONFIG
cp -r conf/home/. /home/x &&
cp -r conf/truetype /usr/share/fonts &&


## WALLSET
git clone https://github.com/terroo/wallset down-wallset &&
cd down-wallset &&
sh install.sh &&
cd ..
