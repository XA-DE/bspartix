
## BLACKARCH
curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syu --noconfirm &&

## dotfiles
git clone https://github.com/XA-DE/dotfiles.git &&

## DEPENDENCIES
pacman -S --noconfirm xf86-video-intel intel-ucode linux-headers linux-lts-headers xorg-server xorg-xinit xorg-xrandr xdg-utils bluez bluez-runit bluez-utils dkms broadcom-wl-dkms alsa-utils crda thunar dmenu polybar feh ffmpeg imagemagick bspwm vim sxhkd firefox ntfs-3gs redshift picom alacritty yay &&
yes | pacman -Scc &&

## USER x
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers &&

## CONFIG
cp -r truetype /usr/share/fonts &&
cp -r dotfiles/. /home/x &&

## BT
cp  BCM43142A0-0a5c-21d7.hcd /lib/firmware/brcm/BCM43142A0-0a5c-21d7.hcd &&
modprobe -r btusb &&
modprobe btusb &&

## remove setup dir
cd .. &&
rm -rf bspartix



