pacman -Syy

## DEPENDENCIES
pacman -S --noconfirm xorg-server xorg-xinit xorg-xrandr xdg-utils polybar ffmpeg feh imagemagick bspwm vim sxhkd &&

## BLACKARCH
curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syy &&
yes | pacman -Scc &&

## USER x
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) ALL" >> /etc/sudoers &&


## CONFIG
cp -r truetype /usr/share/fonts &&
git clone https://github.com/XA-DE/dotfiles.git &&
cp -r dotfiles/. /home/x &&

## WALLSET
git clone https://github.com/terroo/wallset down-wallset &&
cd down-wallset &&
sh install.sh &&
cd ..
