
## BLACKARCH
curl -O https://blackarch.org/strap.sh &&
sh strap.sh &&
pacman -Syu --noconfirm &&

## DEPENDENCIES
pacman -S --noconfirm alsa-utils thunar dmenu xf86-video-intel intel-ucode xorg-server xorg-xinit xorg-xrandr xdg-utils polybar feh ffmpeg imagemagick bspwm vim sxhkd picom alacritty yay &&
yes | pacman -Scc &&

## WALLSET
# git clone https://github.com/terroo/wallset down-wallset && cd down-wallset && sh install.sh && cd .. &&

## USER x
useradd -mG wheel x &&
passwd x &&
echo "%wheel ALL=(ALL) ALL" >> /etc/sudoers &&

## CONFIG
cp -r truetype /usr/share/fonts &&
git clone https://github.com/XA-DE/dotfiles.git &&
cp -r dotfiles/. /home/x




