passwd &&
pacman -S --noconfirm base-devel linux-lts linux-firmware efibootmgr elogind picom termite xorg-server xorg-xinit xdg-utils os-prober grub networkmanager networkmanager-runit
grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub &&
grub-mkconfig -o /boot/grub/grub.cfg &&
ln -sf /usr/share/zoneinfo/Asia/Kolkata /etc/localtime && hwclock --systohc &&
echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen && locale-gen &&
echo "export LANG="en_US.UTF-8" " >> /etc/locale.conf &&
echo "x" >> /etc/hostname
cp etc/* /etc
sh addons
